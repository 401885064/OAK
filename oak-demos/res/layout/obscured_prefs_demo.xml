<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        style="@style/Fill"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">
    <TextView
            style="@style/FillWidth"
            android:text="@string/disclaimer"/>
    <EditText
            style="@style/FillWidth"
            android:id="@+id/my_edittext"
            android:hint="save a preference here"/>
    <LinearLayout
            style="@style/FillWidth"
            android:orientation="horizontal"
            android:gravity="center">
        <Button
                style="@style/Wrap"
                android:text="Save Encrypted"
                android:onClick="saveEncryptedClicked"/>
        <Button
                style="@style/Wrap"
                android:text="Save Normally"
                android:onClick="saveNormallyClicked"/>
    </LinearLayout>
    <TextView
            style="@style/FillWidth"
            android:text="The following shows exactly how the data is saved:"/>
    <TextView
            style="@style/FillWidth"
            android:layout_marginTop="10dip"
            android:id="@+id/saved_content"/>
</LinearLayout>