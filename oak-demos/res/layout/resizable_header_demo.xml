<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oak="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <oak.widget.ResizableHeaderScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        oak:minHeaderHeight="100dp"
        oak:maxHeaderHeight="200dp"
        oak:headerCentered="true"
        oak:resizableHeaderBackground="@drawable/resizable_header_bg"
        oak:headerLayout="@layout/resizable_header_scrollview_header"
        oak:contentLayout="@layout/resizable_header_scrollview_layout"/>

</LinearLayout>