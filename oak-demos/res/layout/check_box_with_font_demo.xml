<ScrollView
    style="@style/Fill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oak="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        style="@style/Fill"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <CheckBoxWithFont
            style="@style/FillWidth"
            android:text="Fonts on CheckBoxes"
            android:textSize="18sp"
            oak:oakFont="Once_upon_a_time.ttf" />

        <CheckBoxWithFont
            style="@style/FillWidth"
            android:text="Using CheckBoxWithFont!"
            android:textSize="20sp"
            oak:oakFont="Apple Chancery.ttf" />

        <CheckBoxWithFont
            style="@style/Wrap"
            android:text="Really useful"
            android:textSize="20sp"
            oak:oakFont="Roboto-Bold.ttf" />

        <CheckBoxWithFont
            style="@style/Wrap"
            android:text="for the new"
            android:textSize="20sp"
            oak:oakFont="Roboto.ttf" />

        <CheckBoxWithFont
            style="@style/Wrap"
            android:text="Roboto"
            android:textSize="20sp"
            oak:oakFont="Roboto-Light.ttf" />

        <CheckBoxWithFont
            style="@style/Wrap"
            android:text="font family!"
            android:textSize="20sp"
            oak:oakFont="Roboto-Thin.ttf" />

        <CheckBoxWithFont
            style="@style/FillWidth"
            android:text="also res-supported!"
            android:textSize="18sp"
            oak:oakFont="@string/default_font" />
    </LinearLayout>
</ScrollView>