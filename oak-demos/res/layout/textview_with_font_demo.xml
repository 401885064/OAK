<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:oak="http://oak/oak/schema"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal">


    <oak.TextViewWithFont
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ever wanted to specify a font in XML?"
            android:textSize="18sp"
            oak:font="Gotham-Book.ttf"
            />

    <oak.TextViewWithFont
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Using TextViewWithFont, you can!"
            android:textSize="20sp"
            oak:font="Apple Chancery.ttf"
            />

    <include android:id="@+id/attribution" layout="@layout/attribution" />
</LinearLayout>